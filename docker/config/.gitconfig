# Git Configuration for Claude Code Environment
# Update with your details

[user]
    name = Your Name
    email = your.email@example.com

[init]
    defaultBranch = main

[core]
    editor = nano
    autocrlf = input
    whitespace = trailing-space,space-before-tab

[color]
    ui = auto

[pull]
    rebase = false

[push]
    default = current
    autoSetupRemote = true

[alias]
    st = status
    co = checkout
    br = branch
    ci = commit
    lg = log --oneline --graph --decorate -20
    unstage = reset HEAD --
    last = log -1 HEAD
    visual = !gitk

[credential]
    helper = store

[safe]
    directory = /home/claude/workspace
